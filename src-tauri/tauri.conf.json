{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "灵视 Glimpse",
  "version": "0.1.0",
  "identifier": "com.glimpse.qrscanner",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "灵视 Glimpse",
        "width": 900,
        "height": 560,
        "minWidth": 750,
        "minHeight": 450,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico",
        "languages": ["SimpChinese", "English"]
      }
    },
    "resources": []
  }
}
